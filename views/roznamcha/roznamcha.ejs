<%- include('../includes/head.ejs') %>

<body>
  <%- include('../includes/navigation.ejs') %>

  <main class="container-fluid">
    <% if (roznamchas.length > 0) { %>
    <div class="table-wrapper">
      <div class="table-title">
        <div class="row" style="    display: flex;
        align-items: flex-end;">
          <div class="col-sm-6">
            <h2>Manage <b>Roznamcha</b></h2>
          </div>
          <div class="col-sm-6 table-action" style="display: flex;
          flex-direction: row-reverse;">
            <!-- table action button work -->
            <a href="/add-roznamcha" class="btn btn-outline-success" style="margin: 0.5rem">
              <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus-circle" viewBox="0 0 16 16">
                <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z" />
                <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z" />
              </svg>
              <span> Add Roznamcha Entry</span></a>
            <!-- table action button ended here -->
          </div>
        </div>
      </div>
      <table class="table table-responsive table-bordered table-hover align-middle">
        <thead>
          <tr>
            <th scope="col" style="width: 70px" class="text-center"># ID</th>
            <th scope="col">Date</th>
            <th scope="col">Customer</th>
            <th scope="col">Entry Type</th>
            <th scope="col">Bank Account</th>
            <th scope="col">Amount</th>
            <th scope="col">Actions</th>
          </tr>
        </thead>
        <tbody>
          <% for (let [i, roznamcha] of roznamchas.entries()) { %>
          <tr>
            <th scope="row" class="text-center">
              <%= i+1 %>
            </th>
            <td><%= new Date(roznamcha.updatedAt).toDateString() %></td>
            <td><%= roznamcha.customer.name  %></td>
            <td><%= roznamcha.entryType.type  %></td>
            <td><%= roznamcha.bankAccount.accountName %></td>
            <td><%= roznamcha.amount %></td>
            <td>
              <form action="/edit-roznamcha/<%= roznamcha.id %>/?edit=true" method="get">
                <!-- edit button -->
                <button type="submit" class="btn btn-outline-primary">
                  <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
                    <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z" />
                    <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z" />
                  </svg></button>
                <input type="hidden" name="edit" value="true" />
              </form>

              <form action="/delete-roznamcha" method="post">
                <!-- delete button -->
                <button class="btn btn-outline-danger">
                  <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-x-circle" viewBox="0 0 16 16">
                    <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z" />
                    <path d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708z" />
                  </svg></button>
                <input type="hidden" value="<%= roznamcha.id %>" name="roznamchaId">
              </form>
            </td>
          </tr>
          <% } %>
    </div>
    </tbody>
    </table>
    </div>
    <% } else { %>
    <!-- table action button work -->
    <a href="/add-roznamcha" class="btn btn-outline-success" style="margin: 0.5rem">Add First Roznamcha Entry</a>
    <h1 class="centered">No Roznamcha Data Found!</h1>
    <% } %>
  </main>
  <%- include('../includes/end.ejs') %>
</body>